<tool id="ip_ray" name="Ray" version="0.1-1" profile="20.05">
    <description>ray testing</description>
    <requirements> 
        <requirement type="package" version="1.24.2">numpy</requirement>
        <requirement type="package" version="1.10.1">scipy</requirement>
        <requirement type="package" version="8.8.0">ipython</requirement>
        <requirement type="package" version="0.3.6">dill</requirement>
        <requirement type="package" version="1.0.4">posix_ipc</requirement>
        <requirement type="package" version="1.3.0">cvxopt</requirement>
        <requirement type="package" version="1.3.1">cvxpy</requirement>
        <requirement type="package" version="3.6.2">matplotlib</requirement>
        <requirement type="package" version="2020.0">mkl</requirement>
        <requirement type="package" version="0.19.3">scikit-image</requirement>
        <requirement type="package" version="2.3.0">ray-core</requirement>
        <requirement type="package" version="2.3.0">ray-dashboard</requirement>
        <requirement type="package" version="2.3.0">ray-default</requirement>
    </requirements>
    <command detect_errors="aggressive">
    <![CDATA[
    python '$__tool_directory__/test-ray.py' '$input' > stdout.txt
    ]]>
    </command>
    <inputs>
        <param name="input" type="data" format="png" label="Input image" />
    </inputs>
    <outputs>
        <data format="txt" name="stdout" from_work_dir="stdout.txt" />
    </outputs>
    <tests>
        <test>
            <param name="input" value="test.png" />
            <output name="stdout" value="stdout.txt" ftype="txt" compare="diff" />
        </test>
    </tests>
    <help>
        This tool tests ray.
    </help>
    <citations>
        <citation type="bibtex">@article{dummy_citation}</citation>
    </citations>
</tool>

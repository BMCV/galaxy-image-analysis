<?xml version="1.0"?>
<tool name="Auto Threshold" id="ip_threshold" version="0.0.2">
   <description>Auto Threshold</description>
   <requirements>
     <requirement type="package">numpy</requirement>
     <requirement type="package">pillow</requirement>
     <requirement type="package">tifffile</requirement>
     <requirement type="package">scikit-image</requirement>
   </requirements>
   <command interpreter="python"><![CDATA[auto_threshold.py $input $output $thresh_type $dark_background]]></command>
   <inputs>
        <param name="thresh_type" type="select" label="Threshold Algorithm">
          <option value="otsu" selected="True">Otsu</option>
          <option value="li">Liâ€™s Minimum Cross Entropy</option>
          <option value="isodata">Isodata</option>
          <option value="adaptive">Adaptive (Gauss)</option>
          <option value="adaptive">Adaptive (Mean)</option>
          <option value="yen">Yen</option>
        </param>
        <param name="dark_background" type="boolean" checked="true" truevalue="True" falsevalue="False" label="Dark Background" />
        <param name="input" type="data" format="tiff" label="Source file" />
    </inputs>
    <outputs>
       <data format="tiff" name="output" />
    </outputs>
    <help>
Applies a standard threshold algorithm to an image.
    </help>
    <citations>
        <citation type="doi">10.7717/peerj.453</citation>
    </citations>
</tool>
